<center>
  <form id="del" method="post" action="delivery/deliveryDT">
    <h2>
  Standard Delivery
  </h2>
  <p style="font-weight: bold;">Please select your delivery day:</p>
  <select name="DeliveryDate" id="DeliveryDate" value="{{DeliveryDate}}" required>
  <option value="Date+2" id="Day2"> </option>
  <option value="Date+3" id="Day3"> </option>
  <option value="Date+4" id="Day4"> </option>
  <option value="Date+5" id="Day5"> </option>
  </select>
  <p> </p>

  <p style="font-weight: bold;">Please select your estimated delivery time:</p>
  <select name="DeliveryTime" id="DeliveryTime" value="{{DeliveryTime}}" required>
    <option value="8AM">8AM</option>
    <option value="10AM">10AM</option>
    <option value="12PM">12PM</option>
    <option value="2PM">2PM</option>
    <option value="4PM">4PM</option>
    <option value="6PM">6PM</option>
    <option value="8PM">8PM</option>
  </select>
  <p></p>
  <input type="submit" value="Submit Delivery">
  </form>
  </center>
<script>
  window.onload = function() {
  var today = new Date();
  document.getElementById("Day2").innerHTML = ""+ ( today.getDate() + 2 ) + "/" + ( today.getMonth() + 1);
  document.getElementById("Day3").innerHTML = ""+ ( today.getDate() + 3 ) + "/" +  ( today.getMonth() + 1);
  document.getElementById("Day4").innerHTML = ""+ ( today.getDate() + 4 ) + "/" +  ( today.getMonth() + 1);
  document.getElementById("Day5").innerHTML = ""+ ( today.getDate() + 5 ) + "/" +  ( today.getMonth() + 1);
  }
</script>