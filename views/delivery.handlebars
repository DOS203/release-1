  <center>
  <form id="del" action="/courier">
    <h2>
    Delivery Details
  </h2>
    Appartment Number:
    <input type="number" name="appNum" id="appNum" maxlength="5"></input>
    <br>
    Street Number:
    
    <input type="number" name="steetNum" id="streetNum" maxlength="5" required></input>
    <br>
    Street Name:
    <input type="text" name="streetName" id="streetName" maxlength="30" required></input>
    <br>
    Suburb:
    <input type="text" name="suburbName" id="suburbName" maxlength="15" required></input>
    <br>
    Postcode:
    <input type="number" name="postcode" id="postcodeNum" maxlength="4" required></input>
    <br>
    State:
    <select name="state" id="state" required>
      <option value="NSW">NSW</option>
      <option value="QLD">QLD</option>
      <option value="VIC">VIC</option>
      <option value="TAS">TAS</option>
      <option value="WA">WA</option>
      <option value="SA">SA</option>
      <option value="NT">NT</option>
    </select>
  <br>
  <p id="demo"></p>
  <button type="button" onclick="myFunction()">Verify</button> <input type="submit" id="formSubmit" value="Submit Address">
</form>
<script>
function myFunction() {
  var x = "Address: " + document.getElementById("del").elements[0].value + "/" + document.getElementById("del").elements[1].value + " " + document.getElementById("del").elements[2].value + ", " + document.getElementById("del").elements[3].value + ", " + document.getElementById("del").elements[4].value + ", " + document.getElementById("del").elements[5].value;
  document.getElementById("demo").innerHTML = x;
  localStorage.setItem("address",x);
}
</script>

</center>
